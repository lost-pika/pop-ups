<script>
  window.EXPLI_POPUPS = window.EXPLI_POPUPS || [];

  window.EXPLI_POPUPS.push({
    popupId: "{{ block.settings.popup_id }}",
    shop: "{{ shop.permanent_domain }}",
    appUrl: "https://pop-ups-two.vercel.app"
  });
</script>

{% schema %}
{
  "name": "Expli Popup",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "popup_id",
      "label": "Popup ID",
      "info": "Paste popup ID from Expli dashboard"
    }
  ]
}
{% endschema %}